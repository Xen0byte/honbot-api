{
  "compilerOptions": {
    "declaration": false,
    "sourceMap": true,
    "noImplicitAny": false,
    "target": "es2017",
    "lib": ["es2016"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "types" : ["mocha"]
  },
  "exclude": [
    "node_modules",
    "build"
  ],
  "include": [
    "src/**/*",
    "config/**/*"
  ],
  "compileOnSave": false
}
