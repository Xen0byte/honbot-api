{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2017",
    "module":"commonjs",
    "lib": ["es2017"],
    "inlineSourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./build"
  },
  "include": [
    "src/**/*",
    "models/**/*",
    "config/**/*",
    "commands/**/*"
  ]
}
