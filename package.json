{
  "name": "honbot-api",
  "version": "0.0.1",
  "author": "Scott Cooper <scttcper@gmail.com>",
  "main": "index.js",
  "scripts": {
    "build": "rimraf build; tsc -p .",
    "build:watch": "tsc -p . -w",
    "start": "NODE_ENV=dev DEBUG=honbot* nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "test": "mocha --require ts-node/register test/*.spec.ts",
    "coverage": "nyc npm test",
    "docs": "typedoc --out docs src; touch docs/.nojekyll",
    "lint": "tslint \"src/**/*.ts\""
  },
  "dependencies": {
    "@types/moment-timezone": "^0.2.34",
    "debug": "^2.6.0",
    "koa": "2.0.0-alpha.7",
    "koa-logger": "^2.0.0",
    "koa-router": "^7.1.0",
    "koa2-raven": "^4.0.0",
    "lodash": "^4.17.4",
    "moment": "^2.17.1",
    "moment-timezone": "^0.5.11",
    "mongodb": "^2.2.19",
    "raven": "^1.1.1",
    "request": "^2.79.0",
    "request-promise-native": "^1.0.3"
  },
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/debug": "^0.0.29",
    "@types/koa": "^2.0.37",
    "@types/koa-router": "^7.0.21",
    "@types/lodash": "^4.14.48",
    "@types/mocha": "^2.2.37",
    "@types/moment": "^2.13.0",
    "@types/mongodb": "^2.1.37",
    "@types/request-promise-native": "^1.0.2",
    "chai": "^3.5.0",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "nyc": "^10.0.0",
    "rimraf": "^2.5.4",
    "ts-node": "^2.0.0",
    "tslint": "^4.3.1",
    "typedoc": "^0.5.3",
    "typescript": "^2.1.4"
  },
  "repository": "https://github.com/scttcper/honbot-api.git",
  "license": "MIT"
}
